# FFI Backend - works on MRI, JRuby, and TruffleRuby
gem "ffi", github: "ffi/ffi"
gem "toml-rb", github: "emancu/toml-rb"
gem "citrus", github: "mjackson/citrus"

platform :mri do
  # MRI Backend
  gem "ruby_tree_sitter", github: "Faveod/ruby-tree-sitter"
  # Rust Backend
  gem "tree_stump",
    github: "pboling/tree_stump",
    branch: "tree_haver"
end
